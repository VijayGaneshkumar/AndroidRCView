<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    local:cardCornerRadius="@dimen/cardview_cornerradius"
    local:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/rl_padding">

        <TextView
            android:id="@+id/newsItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/newsItemTitle_textsize"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="@dimen/newsItemTitle_textsize" />

        <TextView
            android:id="@+id/newsItemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsItemTitle"
            android:layout_toLeftOf="@id/newsItemPhoto"
            android:layout_toStartOf="@id/newsItemPhoto"
            android:paddingLeft="@dimen/newsItemDesc_textsize"
            android:text="@string/nodesc"
            android:textSize="@dimen/newsItemDesc_textsize" />

        <ImageView
            android:id="@+id/newsItemPhoto"
            android:layout_width="@dimen/newsItemPhoto_width"
            android:layout_height="@dimen/newsItemPhoto_height"
            android:layout_below="@id/newsItemTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

